{
  "domain": "litime_bms_ble",
  "name": "LiTime BMS BLE",
  "codeowners": ["@rubenmuehlhans"],
  "config_flow": true,
  "dependencies": ["bluetooth"],
  "documentation": "https://github.com/rubenmuehlhans/litime-ble-hacs",
  "bluetooth": [
    {
      "local_name": "LT-*",
      "connectable": true
    },
    {
      "local_name": "L-*",
      "connectable": true
    }
  ],
  "iot_class": "local_polling",
  "issue_tracker": "https://github.com/rubenmuehlhans/litime-ble-hacs/issues",
  "requirements": ["bleak>=0.21.0", "bleak-retry-connector>=3.5.0"],
  "version": "1.0.0"
}
